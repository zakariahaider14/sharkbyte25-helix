# Multi-stage build for HELIX Frontend + Backend

# Stage 1: Build
FROM node:20-alpine AS builder

WORKDIR /app

# Copy package files
COPY package.json pnpm-lock.yaml* ./

# Copy patches directory
COPY patches ./patches

# Install pnpm
RUN npm install -g pnpm

# Install all dependencies (including dev dependencies for build)
RUN pnpm install --frozen-lockfile

# Copy source code
COPY . .

# Set build-time environment variables for Vite
ENV VITE_APP_TITLE="HELIX"
ENV VITE_APP_LOGO="/logo.svg"
ENV VITE_ANALYTICS_ENDPOINT=""
ENV VITE_ANALYTICS_WEBSITE_ID=""

# Build the application (frontend + backend)
RUN pnpm run build

# Stage 2: Production
FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package.json pnpm-lock.yaml* ./

# Copy patches directory
COPY patches ./patches

# Install pnpm
RUN npm install -g pnpm

# Install all dependencies (server needs some dev dependencies at runtime)
RUN pnpm install --frozen-lockfile

# Copy built application from builder
COPY --from=builder /app/dist ./dist

# Copy server source (needed for runtime)
COPY server ./server

# Set environment variables
ENV NODE_ENV=production
ENV PORT=8080

# Expose port
EXPOSE 8080

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD node -e "require('http').get('http://localhost:8080/api/health', (r) => {process.exit(r.statusCode === 200 ? 0 : 1)})"

# Start the server
CMD ["node", "dist/index.js"]
